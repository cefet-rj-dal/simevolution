<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aves"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="usuario.app.sim_evolution.activities.AvesActivity">

    <LinearLayout
        android:id="@+id/layout_aves_btn_topo_esquerda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/btn_sound"
            android:layout_width="39dp"
            android:layout_height="42dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/botao_tocar_musica_selector"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="4sp"
            android:checked="true" />

        <LinearLayout
            android:id="@+id/layout_aves_btn_topo_direita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_help"
                android:src="@drawable/btn_help"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:paddingTop="4sp"
                android:paddingRight="5sp" />

           <!-- <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_exit"
                android:src="@drawable/btn_exit"
                android:background="@null"
                android:paddingTop="4sp"
                android:paddingRight="5sp"
                android:onClick="sair"/>-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_aves_corpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bg_titulo_aves"
            android:src="@drawable/bg_titulo_aves"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <LinearLayout
            android:id="@+id/aves_corpo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="8dp">

            <LinearLayout
                android:id="@+id/aves_corpo_opcoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_gravity="left">

                <LinearLayout
                    android:id="@+id/aves_opcoes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_gravity="left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_4422"
                        android:src="@drawable/ave_4422"
                        android:paddingRight="20dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_4421"
                        android:src="@drawable/ave_4421"
                        android:paddingRight="20dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_4411"
                        android:src="@drawable/ave_4411"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aves_opcoes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:layout_marginTop="18dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_4322"
                        android:src="@drawable/ave_4322"
                        android:paddingRight="20dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_4321"
                        android:src="@drawable/ave_4321"
                        android:paddingRight="20dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_4311"
                        android:src="@drawable/ave_4311"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aves_opcoes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:layout_marginTop="18dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_3322"
                        android:src="@drawable/ave_3322"
                        android:paddingRight="20dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_3321"
                        android:src="@drawable/ave_3321"
                        android:paddingRight="20dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_3311"
                        android:src="@drawable/ave_3311"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/aves_corpo_selecionadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp">

                <LinearLayout
                    android:id="@+id/aves_selecionadas1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_gravity="right">

                    <ImageView
                        android:id="@+id/img_ave_selecionada_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_square"
                        android:minWidth="60dp"
                        android:minHeight="60dp"
                        />

                    <ImageView
                        android:id="@+id/img_ave_selecionada_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:minHeight="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/shape_square" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aves_selecionadas2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_gravity="right"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/img_ave_selecionada_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:minHeight="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/shape_square" />

                    <ImageView
                        android:id="@+id/img_ave_selecionada_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:minHeight="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/shape_square" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_aves_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="8dp">

                        <!-- <ImageButton
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/btn_voltar"
                             android:src="@drawable/btn_voltar"
                             android:background="@null"
                             android:paddingRight="8dp"
                             android:onClick="callCenariosActivity"/>-->

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_iniciar"
                            android:src="@drawable/btn_iniciar"
                            android:background="@null"
                            android:onClick="callSimulacaoActivity"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
